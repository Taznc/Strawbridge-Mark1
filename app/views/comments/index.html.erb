<h1>Listing comments</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Belongs to</th>
    <th>Url</th>
    <th>Body</th>
    <th>Status</th>
    <th>Ip</th>
  </tr>

<% for comment in @comments %>
  <tr>
    <td><%=h comment.title %></td>
    <td><%=h comment.author %></td>
    <td><%=h comment.url %></td>
    <td><%=h comment.body %></td>
    <td><%=h comment.status %></td>
    <td><%=h comment.ip %></td>
    <td><%= link_to 'Show', [@article, comment] %></td>
    <td><%= link_to 'Edit', [:edit, @article, comment] %></td>
    <td><%= link_to 'Destroy', [@article, comment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New comment', new_article_comment_path(@article) %>
