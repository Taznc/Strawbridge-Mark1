<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title><%= yield(:title) ? "#{yield(:title)} :" : '' %> MarkOneCMS</title>
    <%= stylesheet_link_tag 'admin', :media => 'all' %>
    <% unless controller.controller_name == 'galleries' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag :fckeditor %>
    <% end %>
  <% if controller.controller_name == 'galleries' and controller.action_name == 'new' %>
    <%= javascript_include_tag "jquery-1.3.2.min" %>
    <%= stylesheet_link_tag 'uploadify', :media => 'all' %>
    <%= javascript_include_tag "jquery-ui" %>
    <%= yield(:jstemplates) -%>
  <% end %>
  </head>
  <body>
    <div id="logobox">
      <div id="logo_container">
        <%= image_tag("../images/theme/admin/logo.png", :alt => "MarkOneCMS logo", :id => "logo") %>
      </div>
    </div>
  <div id="header">
    <div id="topnav">
      <ul id="tabs">
        <li <%= 'class="current"' if controller.controller_name == 'seos' and controller.action_name == 'dashboard' %>><%= link_to 'Dashboard', admin_dashboard_path %></li>
        <!--><li <%= 'class="current"' if controller.controller_name == 'orders' %>><%= link_to 'Orders', admin_orders_path %></li>!-->
        <li <%= 'class="current"' if controller.controller_name == 'settings' %> style="float:right;"><a href="/">View Site</a></li>
        <!--><li <%= 'class="current"' if controller.controller_name == 'users' %> style="float:right;"><a href="/users/show">Users</a></li>!-->
        <li <%= 'class="current"' if controller.controller_name == 'settings' %> style="float:right;"><a href="/admin/settings">Settings</a></li>
      </ul>
    </div>
  </div>
  <div id="container">
    <div id="sidemenu">
      <%= image_tag("../images/theme/admin/sidemenubg.jpg", :alt => "MarkOneCMS logo", :style=>'height:31px;') %>
      <div id="side_menu">
        <h1>Overviews</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'seos' and controller.action_name == 'dashboard' %>><%= link_to 'Dashboard', admin_dashboard_path %></li>
        </ul>
        <h1>Content Pages</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'pages' %>><%= link_to 'Pages', admin_pages_path %></li>
        </ul>
		<!--
        <h1>Blog</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'articles' %>><%= link_to 'Articles', admin_articles_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'tags' %>><%= link_to 'Article Tags', admin_tags_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'categories' %>><%= link_to 'Categories', admin_categories_path %></li>
        </ul>
        <h1>Comments</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'comments' %>><%= link_to 'Comments', admin_comments_path %></li>
        </ul>
        <h1>News and Events</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'events' %>><%= link_to 'Events', admin_events_path %></li>
        </ul>!-->
        <h1>SEO</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'metatags' %>><%= link_to 'Meta Tags', admin_metatags_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'settings' %>><a href="/admin/settings">Settings</a></li>
        </ul>
        <!--<h1>E-Commerce</h1>
        <ul>
          <li <%= 'class="current"' if controller.controller_name == 'products' %>><%= link_to 'Products', admin_products_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'orders' %>><%= link_to 'Orders', admin_orders_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'groups' %>><%= link_to 'Groups', admin_groups_path %></li>
          <li <%= 'class="current"' if controller.controller_name == 'subgroups' %>><%= link_to 'Sub-Groups', admin_subgroups_path %></li>
        </ul>!-->
      </div>
    </div>
    <div id="main_content">
      <p id="greeting">Hello <%= current_user.login %> (<%= link_to 'Logout', logout_path %>)</p>
      <% flash.each do |key, msg| %>
        <%= content_tag :div, msg, :id => key %>
      <% end %>
      <%= yield %>
    </div>
  <div style="clear:both;"></div>
  </div> <!-- End of Container !-->
  </body>
</html>